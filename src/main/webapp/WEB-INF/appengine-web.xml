<?xml version="1.0" encoding="utf-8"?>

<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">

    <!-- docs: -->
    <!-- https://cloud.google.com/appengine/docs/java/endpoints/required_files#appengine-webxml -->
    <!-- https://cloud.google.com/appengine/docs/java/config/appconfig#Java_appengine_web_xml_About_appengine_web_xml
    -->

    <application>cryptonomica-server</application>
    <version>v-1-0</version>
    <threadsafe>true</threadsafe>

    <!-- see: https://cloud.google.com/appengine/docs/standard/java/runtime-java8 -->
    <runtime>java8</runtime>

    <!--<warmup-requests-enabled>false</warmup-requests-enabled>-->
    <warmup-requests-enabled>true</warmup-requests-enabled>

    <!-- logging: -->
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>
    <!-- it seems, that it does not work, to have log messages to be shown in GAE logs,
    we have to set their level to WARNING manually-->

    <env-variables>
        <!-- see: https://github.com/GoogleCloudPlatform/java-docs-samples/blob/master/appengine/endpoints-frameworks-v2/backend/src/main/webapp/WEB-INF/appengine-web.xml#L31-->
        <!--<env-var name="ENDPOINTS_SERVICE_NAME" value="${endpoints.project.id}.appspot.com" />-->
        <env-var name="ENDPOINTS_SERVICE_NAME" value="$cryptonomica-server.appspot.com"/>
    </env-variables>

</appengine-web-app>
